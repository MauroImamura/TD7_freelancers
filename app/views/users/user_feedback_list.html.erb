<div style= "margin:50px"><h1>Lista de feedbacks de <%= @user.email %>:</h1></div>
<% if @user.user_feedbacks.any? %>
    <% @user.user_feedbacks.each do |feedback| %>
        <div style="border-style: solid; border-color: #888888; border-width: 2px; max-width: 50%; margin-bottom: -2px; padding:15px">
            <p>Nota <%= feedback.rate %></p>
            <p>Comentários: <%= feedback.comment %></p>
        </div>
    <% end %>
<% else %>
    <p>Você ainda não possui feedbacks</p>
<% end %>
<div style= "margin:27px">
    <%= link_to 'Voltar para página principal', root_path%>
</div>